<%= render 'guilds/navbar' %>

<div class="container">
    <h1><%= @guild.name %>へ依頼</h1>
    
    <%= form_with(model: @quest, local: true) do |f| %>
      <%= hidden_field_tag :guild_id, @guild.id %>
      <div class="form-group">
        <%= f.label :title, '依頼名' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content, '依頼内容' %>
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>
      <div>
        <%= f.label :photo, "画像選択" %>
      </div>
      <div id="photo-select">
        <%= f.file_field :image, class: 'photo-conf', id: 'user-img' %>
      </div>
      <%= f.submit '依頼する', class: 'btn btn-success' %>
    <% end %>
</div>