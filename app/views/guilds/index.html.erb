<div class="wrap">
  <div class="row">
    <div id="side-nav" class="col-3">
      <%= render 'guilds/side_navbar' %>
    </div>
    <div id="guilds-main" class="col-8">
      <div>
        <p class="build-btn">
          <%= link_to "ギルドを設立", new_guild_path, class: 'btn btn-success' %>
        </p>
      </div>
      <div>
        <h3 class="heading">承認待ちギルド</h3>
        <% if @approval_guilds.count == 0 %>
          <div id="guild-index-approvals">
            <h5>現在承認待ちのギルドはありません</h5>
          </div>
        <% else %>
          <%= render 'guilds/guilds', guilds: @approval_guilds %>
        <% end %>
      </div>
      <div>
        <h3 class="heading">加入ギルド</h3>
        <%= render 'guilds/guilds', guilds: @join_guilds %>
      </div>
    </div>
  </div>
</div>