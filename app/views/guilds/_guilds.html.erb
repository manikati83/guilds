<% guilds.each do |guild| %>
  <div class="media bg-light rounded">
    <div class="media-body">
      <h3><%= link_to guild.name, guild_path(id: guild.id), class: 'guild-name' %></h3>
      <ul class="mb-2">
        <% guild.hashtags.each do |tag| %>
          <li class="mr-1" style="display: inline-block; font-family: Arial;"><%= link_to tag.hashname + ",", tags_path(id: tag.id), class: "text-dark" %></li>
        <% end %>
      </ul>
      <p>ギルドマスター&nbsp;:&nbsp;<img class="rounded" src="<%= gravatar_url(guild.user, { size: 25 }) %>" alt="">&nbsp;<%= guild.user.name %></p>
      <p>メンバー&nbsp;:&nbsp;<%= guild.members.count %>/<%= guild.limit_member %></p>
    </div>
  </div>
<% end %>
<%= paginate guilds %>