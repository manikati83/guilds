<% guilds.each do |guild| %>
  <div class="guild-list-box">
    <div class="guild-list-title">
      <h3><%= link_to guild.name, guild_path(id: guild.id), class: 'guild-name' %></h3>
    </div>
    <div class="guild-list-content">
      <ul class="guild-list-tag"><i class="fa fa-tag"></i>
        <% guild.hashtags.each do |tag| %>
          <li><%= link_to tag.hashname + ",", tags_path(id: tag.id), class: "text-dark" %></li>
        <% end %>
      </ul>
      <p><i class="fa fa-chess-king master-icon"></i>ギルドマスター&nbsp;:&nbsp;<img class="guild-list-user" src="<%= gravatar_url(guild.user, { size: 25 }) %>" alt="">&nbsp;<%= guild.user.name %></p>
      <p><i class="fa fa-user"></i>メンバー&nbsp;:&nbsp;<%= guild.members.count %>/<%= guild.limit_member %></p>
    </div> 
  </div>
<% end %>
<% if current_page?(search_path) %>
  <%= paginate guilds %>
<% end %>